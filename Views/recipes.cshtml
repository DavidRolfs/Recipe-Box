@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No recipes have been added yet!</p>
}
else
{
  <h1>Here is a list of recipes:</h1>
  <ul>
    @foreach (var recipe in Model)
    {
      <li><a href='/recipe/@recipe.GetId()'>@recipe.GetRecipeName(), @recipe.GetRating() stars</a></li>
    }
  </ul>
}
<p><a href="/recipes/new">Add a new recipe</a></p>
<p><a href="/">Return home</a></p>
